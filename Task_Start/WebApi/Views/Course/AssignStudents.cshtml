@model WebApi.ViewModels.CourseStudentsAssignViewModel
<form asp-action="AssignStudents">
    <div class="form-horizontal">
        <h4>Assign</h4>
        <hr />
        @Html.HiddenFor(m => Model.Id)
        <div class="form-group">
            <label class="col-lg-5 col-form-label">@Model.Name</label>
        </div>
        <div class="form-group">
            <label class="col-lg-5 col-form-label">@Model.StartDate</label>
        </div>
        <div class="form-group">
            <label class="col-lg-5 col-form-label">@Model.EndDate</label>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Student name</th>
                    <th> Assigned</th>
                </tr>
            </thead>
            <tbody>
                @for(var i = 0; i < Model.Students.Count; i++)
            {
                <tr>
                    <td>@Model.Students[i].StudentFullName</td>
                    <td>@Html.CheckBoxFor(m=>Model.Students[i].IsAssigned)</td>
                    @Html.HiddenFor(m=>Model.Students[i].StudentId)
                </tr>
            }
            </tbody>
        </table>
        <div class="form-group">
            <div class="offset-md-1 col-lg-10">
                <input type="submit" value="Save" class="btn btn-primary" />

            </div>  
        </div>
    </div>
</form>


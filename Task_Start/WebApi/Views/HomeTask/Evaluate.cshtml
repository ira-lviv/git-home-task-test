@model WebApi.ViewModels.HomeTaskAssessmentViewModel
<form asp-action="SaveEvaluation">
    <div class="form-horizontal">
        <h4>Evaluate</h4>
        <hr />
        @Html.HiddenFor(m => Model.HomeTaskId)
        <div class="form-group">
            <label class="col-lg-5 col-form-label">@Model.Title</label>
        </div>
        <div class="form-group">
            <label class="col-lg-5 col-form-label">@Model.Description</label>
        </div>
        <div class="form-group">
            <label class="col-lg-5 col-form-label">@Model.Date</label>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Student name</th>
                    <th> Pass</th>
                </tr>
            </thead>
            <tbody>
                @for(var i = 0; i < Model.HomeTaskStudents.Count; i++)
                {
                <tr>
                    <td>@Model.HomeTaskStudents[i].StudentFullName</td>
                    <td>@Html.CheckBoxFor(m => Model.HomeTaskStudents[i].isComplete)</td>
                    @Html.HiddenFor(m => Model.HomeTaskStudents[i].StudentId)
                    @Html.HiddenFor(m => Model.HomeTaskStudents[i].StudentFullName)
                    @Html.HiddenFor(m => Model.HomeTaskStudents[i].HomeTaskAssessmentId)
                </tr>
                }
            </tbody>
        </table>
        <div class="form-group">
            <div class="offset-md-1 col-lg-10">
                <input type="submit" value="Save" class="btn btn-primary" />

            </div>
        </div>
    </div>
</form>

